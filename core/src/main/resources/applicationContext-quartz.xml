<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"
      >
    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean" id="scheduler">
        <property name="triggers">
            <list>
                <ref bean="cancelOrderTrigger" />
            </list>
        </property>
    </bean>

    <!--cancel orders-->
    <bean id="cancelOrderTrigger"
          class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail">
            <ref bean="cancelOrderDetail" />
        </property>
        <property name="cronExpression">
            <value>0 0/3 * * * ?</value>
            <!--5 minitus-->
            <!--<value>0 0/3 * * * ?</value>-->
        </property>
    </bean>
    <bean id="cancelOrderDetail"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject">
            <ref bean="creditsBillJob" />
        </property>
        <property name="targetMethod">
            <value>cancelOrders</value>
        </property>
    </bean>
    <bean id="creditsBillJob" class="com.ozstrategy.job.CreditsBillJob" />
    

</beans>